// transition
.transitionEnter
    transform: translateY(-100%)
.transitionEnterActive
    transform: translateY(0)
    transition: transform .3s ease-out
.transitionLeave
    transform: translateY(0)
    transition: transform .3s ease-out
.transitionLeaveActive
    transform: translateY(-100%)
.transitionAppear
    transform: translateY(-100%)
.transitionAppearActive
    transform: translateY(0)
    transition: transform .3s ease-out


.root
    //

.content
    border-radius: 3px
    margin: 10px 10px 70px 10px
    overflow: hidden
    background-color: #fff

.prodInfo
    background-color: #fbfbfb
    overflow: hidden
    padding: 10px

.imageHolder
    float: left
    margin-right: 10px
    width: 20%
    position: relative
    background-color: #FFF

    &:before
        content: ""
        padding-top: 100%
        display: block

.image
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left: 0
    margin: auto
    max-width: 100%
    max-height: 100%

.desc
    overflow: hidden
    font-size: 12px

.name
    margin-bottom: 10px

.form
    padding: 10px

.formLine
    margin-top: 10px

.actions
    position: fixed
    right: 0
    width: 100%
    padding: 15px
    background-color: #fff
    bottom: 0
    box-sizing: border-box
    border-top: 1px solid #e1e1e1
    z-index: 990
    @media $min-768
        width: 42%
    @media $min-1024
        width: 35%

.price
    font-size: 12px
    color: #c6c6c6
    text-decoration: line-through


.flash
    position: fixed
    left: 0
    top: 0
    right: 0
    background: rgba(0,0,0, .8)
    padding: 13px 15px
    color: #fff
    font-size: 14px
    z-index: 1100
    line-height: 18px
    white-space: nowrap
    text-align: center


.flashIcon
    display: inline-block
    vertical-align: middle
    margin: -3px 0 0


.flashText
    display: inline-block
    vertical-align: middle
    white-space: normal
    padding: 0 15px

.flashThemeGreen
    background-color: #3eb23f

.flashThemeRed
    background: $red


.coloredLink
    color: $blueberry


.crossIcon
    width: 14px
    height: 14px
    vertical-align: middle
    fill: #fff
